<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="300520250024" author="olga">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="address"/>
            </not>
        </preConditions>
        <createTable tableName="address">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="apartment" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="house" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="housing" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="postal_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_address_user" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
