<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="insert-users" author="author">
        <insert tableName="users">
            <column name="id" valueNumeric="1"/>
            <column name="login" value="oldUser"/>
            <column name="password" value="pass"/>
            <column name="role" value="USER"/>
            <column name="create_date" valueDate="2025-01-01T00:00:00"/>
            <column name="last_visit_date" valueDate="2025-01-01T00:00:00"/>
        </insert>
        <insert tableName="users">
            <column name="id" valueNumeric="2"/>
            <column name="login" value="newUser"/>
            <column name="password" value="pass"/>
            <column name="role" value="USER"/>
            <column name="create_date" valueDate="2025-06-01T00:00:00"/>
            <column name="last_visit_date" valueDate="2025-06-10T00:00:00"/>
        </insert>
    </changeSet>

    <changeSet id="insert-addresses" author="author">
        <insert tableName="address">
            <column name="id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="1"/>
            <column name="city" value="CityA"/>
            <column name="country" value="CountryA"/>
            <column name="house" valueNumeric="10"/>
            <column name="street" value="StreetA"/>
            <column name="postal_code" value="12345"/>
        </insert>
    </changeSet>
    <changeSet id="update-users-id-sequence" author="author">
        <sql>
            SELECT setval(pg_get_serial_sequence('users', 'id'), (SELECT MAX(id) FROM users));
        </sql>
    </changeSet>
</databaseChangeLog>